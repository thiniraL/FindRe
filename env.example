# ============================================================================
# FindRE - Real Estate Platform Backend
# Environment Variables Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# Supabase PostgreSQL connection string
# Format: postgresql://postgres:[PASSWORD]@[HOST]:[PORT]/postgres
# Get this from: Supabase Dashboard > Settings > Database > Connection String
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# ============================================================================
# JWT CONFIGURATION
# ============================================================================

# JWT Secret for signing access tokens
# MUST be at least 32 characters long
# Generate a secure random string: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long-change-this

# JWT Refresh Secret for refresh tokens
# MUST be at least 32 characters long
# Generate a secure random string: openssl rand -base64 32
# Should be different from JWT_SECRET
JWT_REFRESH_SECRET=your-super-secret-refresh-key-minimum-32-characters-long-change-this

# Access Token Expiry
# Format: [number][unit] where unit is: s (seconds), m (minutes), h (hours), d (days)
# Examples: 15m, 1h, 30s
# Default: 15m (15 minutes)
JWT_ACCESS_EXPIRY=15m

# Refresh Token Expiry
# Format: [number][unit] where unit is: s (seconds), m (minutes), h (hours), d (days)
# Examples: 7d, 30d, 90d
# Default: 7d (7 days)
JWT_REFRESH_EXPIRY=7d

# ============================================================================
# OPTIONAL CONFIGURATION
# ============================================================================

# ============================================================================
# TYPESENSE (Property feed/search index)
# ============================================================================
TYPESENSE_HOST=your-typesense-host
TYPESENSE_PROTOCOL=https
TYPESENSE_PORT=443
TYPESENSE_API_KEY=your-typesense-api-key

# For Supabase Edge Function sync (direct DB connection string)
SUPABASE_DB_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# Google OAuth (Sign-In)
GOOGLE_CLIENT_ID=your-google-oauth-client-id.apps.googleusercontent.com

# Node Environment
# Options: development, production, test
# Default: development
NODE_ENV=development

# Next.js Configuration
# Set to '1' to enable Next.js telemetry (optional)
NEXT_TELEMETRY_DISABLED=1

